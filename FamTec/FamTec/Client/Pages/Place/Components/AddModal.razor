

<div class="modal-backgroud">
    <div class="modal-container">
        <div class="modal-wrap">
            <div class="modal-title">
                @Title
            </div>
            <div class="modal-content">
                <InputField 
                    Label="코드"
                    InputType="text"
                    Placeholder="사업장 코드" 
                    />
                <InputField 
                    Label="사업장명"
                    InputType="text"
                    Placeholder="사업장명" 
                    />

                <InputField 
                    Label="전화번호"
                    InputType="text"
                    Placeholder="전화번호" 
                    />
                <InputField 
                    Label="주소"
                    InputType="text"
                    Placeholder="주소" 
                    />
                <InputField 
                    Label="계약번호"
                    InputType="text"
                    Placeholder="계약번호" 
                    />
                <InputField 
                    Label="계약일자"
                    InputType="date"
                    Placeholder="계약일자" 
                    />
                <InputField 
                    Label="계약구분"
                    InputType="text"
                    Placeholder="계약구분" 
                />
            </div>
            <button class="modal-btn" @onclick="ModalClose">
                확인
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string Content { get; set; }
    [Parameter] public EventCallback<bool> OnClose { get; set; }

    private Task ModalClose()
    {
        return OnClose.InvokeAsync(false);
    }
}

}
