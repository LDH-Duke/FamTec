    {
        ResponseUnit<DManagerDTO> resDetailManager = await HttpClient.GetFromJsonAsync<ResponseUnit<DManagerDTO>>($"http://123.2.156.148:5245/api/AdminUser/GetManagerInfo/?adminId={Id}");
