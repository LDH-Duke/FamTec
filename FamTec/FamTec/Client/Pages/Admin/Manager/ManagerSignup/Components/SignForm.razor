@using FamTec.Client.Pages.Admin.Place.PlaceMain.Components
@using FamTec.Shared.Client.DTO
@using FamTec.Client.Pages.Admin.CommonComponents


<div class="form-container">
    <div class="form-title">
        <span>매니저 정보</span>
    </div>
    <div class="form-input">
        <div class="form-input-wrap">
        <InputField 
            InputType="text" 
            Placeholder="Id"
            @bind-Value="@NewManager.UserId"
            Label="아이디"
            />
        <InputField 
            InputType="password" 
            Placeholder="Password"
            @bind-Value="@NewManager.Password"
            Label="비밀번호"
            />
        <InputField 
            InputType="password" 
            Placeholder="Password Check"
            Label="비밀번호 확인"
            />
        <InputField 
            InputType="text" 
            Placeholder="Name"
            @bind-Value="@NewManager.Name"
            Label="이름"
            />
        <InputField 
            InputType="text" 
            Placeholder="Phone"
            @bind-Value="@NewManager.Phone"
            Label="전화번호"
            />
        <InputField 
            InputType="text" 
            Placeholder="Email"
            @bind-Value="@NewManager.Email"
            Label="이메일"
            />
        <InputField 
            InputType="text"
            Placeholder="Type"
            @bind-Value="@NewManager.Type"
            Label="계정 유형" 
            />
        <InputSelectField 
            Label="부서"
            SelectData="DepartmentList"
            SelectedValueChanged="HandleSelectedValueChange"
            />
        </div>
        
    </div>
    
</div>

@code {
    [Parameter] public AddManagerDTO NewManager { get; set; }
    [Parameter] public List<DepartmentDTO> DepartmentList { get; set; }


    private void HandleSelectedValueChange(int value)
    {
        NewManager.DepartmentId = value;

    }
}
